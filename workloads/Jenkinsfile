#!/usr/bin/env groovy

def builders = [:]

node('linux') {
  checkout scm

  def example-workload-A = load 'workloads/example-team-1/example-workload-A/workload-test.groovy'
  builders['example-team-1 :: example-workload-A'] = {
      example-workload-A.execute()
  }
  def example-workload-B = load 'workloads/example-team-2/example-workload-B/workload-test.groovy'
  builders['example-team-2 :: example-workload-B'] = {
      example-workload-B.execute()
  }
}

parallel builders
