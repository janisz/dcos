#!/usr/bin/env groovy

def builders = [:]

node('linux') {
  checkout scm

  builders['example-team-1 :: example-workload-A'] = {
      (load 'workloads/example-team-1/example-workload-A/workload-test.groovy').execute()
  }
  builders['example-team-2 :: example-workload-B'] = {
      (load 'workloads/example-team-1/example-workload-A/workload-test.groovy').execute()
  }
}

parallel builders
